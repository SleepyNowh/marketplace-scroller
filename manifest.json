{
  "manifest_version": 3,
  "name": "Marketplace Row Scroller",
  "version": "1.0.0",
  "description": "Scrolls Facebook Marketplace by rows for testing with auto-updates",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "grid-popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/marketplace*"],
      "css": ["kiosk-mode.css"],
      "js": ["click-interceptor.js"],
      "run_at": "document_start"
    }
  ]
}
